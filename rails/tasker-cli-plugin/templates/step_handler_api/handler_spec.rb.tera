# frozen_string_literal: true

require 'spec_helper'
require_relative '../{{ name | snake_case }}_handler'

RSpec.describe {{ module_name }}::{{ name | pascal_case }}Handler do
  subject(:handler) { described_class.new }

  let(:context) do
    ctx = instance_double(
      TaskerCore::Types::StepContext,
      task_uuid: SecureRandom.uuid,
      step_uuid: SecureRandom.uuid,
      step_config: { 'base_url' => '{{ base_url }}' },
      retry_count: 0,
      max_retries: 3
    )
    allow(ctx).to receive(:get_input).and_return(nil)
    allow(ctx).to receive(:get_input).with('endpoint').and_return('/users/1')
    ctx
  end

  describe '#call' do
    context 'when the API returns a successful response' do
      before do
        stub_request(:get, '{{ base_url }}/users/1')
          .to_return(status: 200, body: '{"id": 1, "name": "Test"}', headers: { 'Content-Type' => 'application/json' })
      end

      it 'returns a success result with the response body' do
        result = handler.call(context)

        expect(result).to be_a(TaskerCore::Types::StepHandlerCallResult::Success)
        expect(result.result['id']).to eq(1)
      end
    end

    context 'when the API returns a server error' do
      before do
        stub_request(:get, '{{ base_url }}/users/1')
          .to_return(status: 500, body: 'Internal Server Error')
      end

      it 'returns a retryable failure' do
        result = handler.call(context)

        expect(result).to be_a(TaskerCore::Types::StepHandlerCallResult::Error)
        expect(result.retryable).to be true
      end
    end
  end
end
