{
  "name": "tasker-example-bun-app",
  "version": "1.0.0",
  "description": "Bun + Hono example app demonstrating Tasker workflow patterns",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "test": "bun test"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "@hono/node-server": "^1.13.0",
    "drizzle-orm": "^0.38.0",
    "drizzle-kit": "^0.30.0",
    "postgres": "^3.4.0",
    "@tasker-systems/tasker": "^0.1.1",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "@types/bun": "^1.3.0",
    "bun-types": "^1.3.0"
  }
}
