{
  "name": "tasker-example-bun-app",
  "version": "1.0.0",
  "description": "Bun + Hono example app demonstrating Tasker workflow patterns",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "test": "bun test"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@tasker-systems/tasker": "^0.1.4",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.11.9",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/bun": "^1.3.9",
    "bun-types": "^1.3.9"
  }
}
